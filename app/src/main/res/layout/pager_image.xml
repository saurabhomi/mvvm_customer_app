<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_124"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_82"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_29"
                    android:background="@drawable/red_border"
                    android:gravity="start"
                    android:letterSpacing="0.1"
                    android:paddingStart="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_18"
                    android:paddingEnd="@dimen/dp_10"
                    android:text="@string/award"
                    android:textColor="#303030"
                    android:textSize="@dimen/sp_5"
                    android:textStyle="normal"
                    app:font="@{`lite`}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:background="@color/light_gray"
                    android:gravity="center"
                    android:text="@string/the_most_awarded_car_rental_company_in_india"
                    android:textColor="#010101"
                    android:textSize="@dimen/sp_7"
                    android:textStyle="normal"
                    app:font="@{`medium`}"/>
            </RelativeLayout>

            <!-- image viwer to view the images -->
            <ImageView
                android:id="@+id/img_pager"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_82"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_9"
                android:contentDescription="@string/about"
                android:src="@drawable/promo_image" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>